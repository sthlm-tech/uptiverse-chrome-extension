{
  "manifest_version": 2,

  "name": "Uptiverse chrome extension",
  "description": "This extension hooks up to uptiverse and retrieves information about potential recruits",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "uptive_icon.png",
    "default_popup": "main.html"
  },
  "permissions": [
    "webNavigation",
    "activeTab",
    "cookies",
    "<all_urls>",
    "storage" 
  ],
  "background": {
    "scripts": ["backgroundService.js"],
    "persistent": false
  }
}